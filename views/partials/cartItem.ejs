<div class="row pb-2">
  <div class="col-6 col-sm-3 col-md-2">
    <img
      src="<%= item.imageUrl %>"
      alt="<%= item.name %>"
      class="cart-item-image img-fluid"
    />
  </div>
  <div class="col-6 col-sm-9 col-md-4 flex-row">
    <h3 class="cart-item-name"><%= item.name %></h3>
    <p class="small-text">Includes <%= item.includes %></p>
    <p class="small-text">$<%= item.price.toFixed(2) %> each</p>
  </div>
  <div class="col-12 col-md-6 d-flex">
    <div
      class="py-3 py-md-0 col-8 d-flex flex-row align-items-center btn-spacing"
    >
      <form method="POST" action="/cart/decrease/<%= item._id %>">
        <button type="submit" class="circle-btn">-</button>
      </form>

      <p class="cart-item-quantity"><%= item.quantity %></p>
      <form method="POST" action="/cart/increase/<%= item._id %>">
        <button type="submit" class="circle-btn">+</button>
      </form>

      <form method="POST" action="/cart/remove/<%= item._id %>">
        <button type="submit" class="cart-item-remove">
          <i class="bi bi-trash"></i>
        </button>
      </form>
    </div>

    <div class="col-4 d-flex align-items-center justify-content-center">
      <p class="cart-item-total">
        $<%= (item.price * item.quantity).toFixed(2) %>
      </p>
    </div>
  </div>
</div>
