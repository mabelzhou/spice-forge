<link rel="stylesheet" href="/css/cart.css" />

<h1>Cart</h1>

<div class="cart-container">
  <div class="row d-none d-md-flex">
    <div class="col-md-6">
      <h3>Item</h3>
    </div>
    <div class="col-md-4 text-center">
      <h3>Quantity</h3>
    </div>
    <div class="col-md-2 text-center">
      <h3>Total</h3>
    </div>
  </div>
  <% if (cart) { Object.values(cart).forEach(function(item) { %>
  <%-include("../partials/cartItem.ejs", { item: item }); -%> <% }) } %>
</div>

<hr style="border-top: 1px solid gray" />

<div class="cart-container">
  <div class="row">
    <div class="col-6 col-sm-10 text-end">
      <p><strong>Subtotal:</strong></p>
      <p><strong>Tax:</strong></p>
      <p><strong>Total:</strong></p>
    </div>
    <div class="col-6 col-sm-2 text-start text-sm-center">
      <p>$<%=parseFloat(subtotal).toFixed(2)%></p>
      <p>$<%= parseFloat(tax).toFixed(2) %></p>
      <p><strong>$<%= parseFloat(total).toFixed(2) %></strong></p>
    </div>
  </div>
</div>

<div class="text-center pb-5">
  <form action="/cart/checkout" method="POST">
    <button type="submit" class="link-btn2">Place Order</button>
  </form>
</div>
